<div class="d-flex flex-column gap-5">
	<nav class="navbar d-flex space-between align-items-center">
		<h1 class="d-block text-truncate w-50 mb-0"><%= @user.name %></h1>

		<div class="d-flex gap-2 gap-lg-3 align-items-center">
			<%= link_to edit_user_path(@user), class: "btn btn-outline-warning", title: "Edit user" do %>
				<i class="bi bi-gear"></i>
				<span class="d-none d-md-inline-block">Edit user</span>
			<% end %>

			<%= link_to root_path, class: "btn btn-outline-secondary", title: "Back" do %>
				<i class="bi bi-arrow-left"></i>
				<span class="d-none d-md-inline-block">Back</span>
			<% end %>

			<%= button_to @user, method: :delete, class: "btn btn-outline-danger", data: { turbo_confirm: "Are you sure you want to destroy #{@user.name} user?"}, title: "Destroy user" do %>
				<i class="bi bi-trash"></i>
				<span class="d-none d-md-inline-block">Destroy user</span>
			<% end %>
		</div>
	</nav>

	<section>
		<%= render @user %>
	</section>
</div>